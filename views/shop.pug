extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main 
        if(products.length > 0)
            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2017/09/28/15/12/book-2795850_960_720.png", alt='Book')
                        .card__content
                            h2.product_price $19.90
                            p.product__description A very interesting book about Sherlock Holmes
                        .card__actions
                            button.btn Add to cart
        else 
            h1 No Products 